<Window
    x:Class="BB_8.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BB_8"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="BB-8"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="100" />

        </Grid.ColumnDefinitions>
        <Label
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Content="BB-8"
            FontSize="40" />
        <Label Grid.Row="1" Content="Descrição :" />
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Height="22"
            Text="(Descrição da divergência) " />
        <Label
            Grid.Row="2"
            Grid.Column="0"
            Content="Tratativa :" />
        <TextBox
            Grid.Row="2"
            Grid.Column="1"
            Height="22"
            Text="(Tratativa)" />
        <Label
            Grid.Row="4"
            Grid.Column="0"
            Content="Complexidade de desenvolvimento :" />
        <RadioButton
            Grid.Row="4"
            Grid.Column="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="1 (BAIXO)" />
        <RadioButton
            Grid.Row="4"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="2 (MÉDIO)" />
        <RadioButton
            Grid.Row="4"
            Grid.Column="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Content="3 (ALTO)" />
        <Label
            Grid.Row="5"
            Grid.Column="0"
            Content="Nível impacto em outras telas :" />
        <RadioButton
            Grid.Row="5"
            Grid.Column="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="0 (NÃO AFETA)" />
        <RadioButton
            Grid.Row="5"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="1 (AFETA)" />
        <Label
            Grid.Row="6"
            Grid.Column="0"
            Content="Comportamento esperado :" />
        <TextBox
            Grid.Row="6"
            Grid.Column="1"
            Height="22"
            Text="(Como irá se comportar após alteração)" />
        <Label
            Grid.Row="7"
            Grid.Column="0"
            Content="Ambiente de teste:" />
        <RadioButton
            Grid.Row="7"
            Grid.Column="1"
            VerticalAlignment="Center"
            Content="1(SIM)" />
        <RadioButton
            Grid.Row="7"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="2(NÃO)" />
        <Label
            Grid.Row="8"
            Grid.Column="0"
            Content="Exemplo de cenário de testes: " />
        <TextBox
            Grid.Row="9"
            Grid.Column="1"
            Height="22"
            Text="(mostrar ambiente de teste para Qa)" />






    </Grid>
</Window>
